@model authApp.Models.AssignTaskViewModel

<h2>Assign Task</h2>

<form asp-action="AssignTask" method="post">
    <div>
        <label asp-for="EmployeeTask.TaskName"></label>
        <input asp-for="EmployeeTask.TaskName" class="form-control" />
        <span asp-validation-for="EmployeeTask.TaskName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EmployeeTask.Description"></label>
        <textarea asp-for="EmployeeTask.Description" class="form-control"></textarea>
    </div>

    <div>
        <label asp-for="EmployeeTask.DueDate"></label>
        <input asp-for="EmployeeTask.DueDate" type="date" class="form-control" />
        <span asp-validation-for="EmployeeTask.DueDate" class="text-danger"></span>
    </div>

    <div>
        <label for="Employee">Assign To (UserId)</label>
        <input asp-for="EmployeeTask.AssignedToUserId" class="form-control" />
    </div>



    <button type="submit" class="btn btn-primary mt-3">Assign Task</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
