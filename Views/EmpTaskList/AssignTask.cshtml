@model authApp.Models.EmployeeTask

<h2>Assign Task to Employee</h2>


<form asp-action="AssignTask" method="post">
    <div class="form-group">
        <label for="TaskName">Task Name</label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DueDate">Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="AssignedToUserId">Assign to Employee</label>
        <select asp-for="AssignedToUserId" class="form-control">
            <option value="">-- Select Employee --</option>
            @foreach (var employee in ViewBag.Employees)
            {
                <option value="@employee.UserId">@employee.Username</option>
            }
        </select>
        <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Assign Task</button>
</form>
