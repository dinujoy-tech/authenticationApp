@model authApp.Models.UploadTaskViewModel

<h2>Tasks Assigned to You</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.AssignedTasks)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td><a href="#">Upload for this Task</a></td>
            </tr>
        }
    </tbody>
</table>

<h2>Upload Task File</h2>

<form asp-action="UploadTask" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="TaskId">Task ID</label>
        <input type="text" id="TaskId" name="TaskId" class="form-control" />
    </div>

    <div class="form-group">
        <label for="UploadedFile">Upload File</label>
        <input type="file" id="UploadedFile" name="UploadedFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>
