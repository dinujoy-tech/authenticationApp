@model authApp.Models.Upload

<h2>Tasks Assigned to You</h2>

<!-- Display the tasks in a table -->
<table class="table">
<thead>
<tr>
<th>Task Name</th>
<th>Description</th>
<th>Due Date</th>
</tr>
</thead>
<tbody>
        @foreach (var task in ViewBag.AssignedTasks)
        {
    <tr>
    <td>@task.TaskName</td>
    <td>@task.Description</td>
    <td>@task.DeadlineDate.ToShortDateString()</td>
    </tr>
        }
</tbody>
</table>

<h2>Upload Task File</h2>

<!-- Form to manually enter TaskId and FilePath -->
<form asp-action="UploadTask" method="post">
<div class="form-group">
<label for="TaskId">Task ID</label>
<input type="number" id="TaskId" name="TaskId" class="form-control" value="@Model.TaskId" required />
</div>

    <div class="form-group">
<label for="FilePath">File Path</label>
<input type="text" id="FilePath" name="FilePath" class="form-control" value="@Model.FilePath" required />
</div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>